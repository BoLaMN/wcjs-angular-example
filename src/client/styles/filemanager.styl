.icon
  
  &.folder
    display inline-block
    margin 0.6em
    background-color transparent
    overflow hidden
  
    &:before
      content: '';
      float: left;
      background-color: rgba(131, 132, 140, 0.41);
      width: 1.5em;
      height: 0.45em;
      margin-left: 0.07em;
      margin-bottom: -0.07em;
      border-top-left-radius: 0.1em;
      border-top-right-radius: 0.1em;
      box-shadow: 1.25em 0.25em 0 0em rgba(108, 108, 113, 0.92);
    
    &:after
      content: '';
      float: left;
      clear: left;
      background-color: rgba(72, 80, 75, 0.26);
      width: 3em;
      height: 2.25em;
      border-radius: 0.1em;
  
    &.full
      &:before
        height 0.55em
  
      &:after
        height 2.15em
        box-shadow 0 -0.12em 0 0 #ffffff
  
  &.file
    width 2.5em
    height 3em
    line-height 3em
    text-align center
    border-radius 0.25em
    color #FFF
    display inline-block
    margin 0.6em 0.6em 0.4em 0.65em
    position relative
    overflow hidden
    box-shadow 1.74em -2.1em 0 0 #A4A7AC inset
    text-overflow ellipsis
    
    &:first-line
      font-size 13px
      font-weight 700
    
    &:after
      content ''
      position absolute
      z-index -1
      border-width 0
      border-bottom 2.6em solid #DADDE1
      border-right 2.22em solid rgba(0, 0, 0, 0)
      top -34.5px
      right -4px
    
    &.f-js
      box-shadow 1.74em -2.1em 0 0 #d0c54d inset
    
      &:after
        border-bottom-color #a69f4e
  
