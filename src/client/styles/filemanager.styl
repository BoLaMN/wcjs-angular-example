  .app-grid
    margin 0
    padding 0
    list-style none
    position relative
    width 100%
    
    li
      position relative
      float left
      overflow hidden
      width 16.6666667%
      height: 106px
      width -webkit-calc(100% / 6)
      width calc(100% / 6)
      padding: 0.3em;
      z-index: 1;
      border: 5px solid transparent;
      outline: 0;
      cursor: pointer;
      box-sizing: border-box;
      transition: 0.3s background-color;
      
      &:hover
        background-color rgba(198, 202, 204, 0.01);      

    div
      overflow hidden
      position absolute
      top 0
      background-color: rgba(198, 202, 204, 0.02);
      left 0
      width 100%
      height 100%
    
